<odoo>
    <record id="pay_history_view_form" model="ir.ui.view">
        <field name="name">pay.history.view.form</field>
        <field name="model">pay.history</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="register_pay" type="object" string="Register Payment"/>
                </header>
                <sheet>
                    <group>
                        <field name="move_id"/>
                        <field name="payment_date"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pay_history_view_list" model="ir.ui.view">
        <field name="name">pay.history.view.list</field>
        <field name="model">pay.history</field>
        <field name="arch" type="xml">
            <list string="Pay History">
                <field name="move_id"/>
                <field name="payment_date"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="action_pay_history" model="ir.actions.act_window">
        <field name="name">Pay History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pay.history</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and Record Payments
            </p>
        </field>
    </record>

    <record id="ir_cron_register_payment" model="ir.cron">
        <field name="name">Rental Management: Property Payment Register</field>
        <field name="model_id" ref="rental_management.model_pay_history"/>
        <field name="state" eval="'code'"/>
        <field name="code" eval="'model.register_pay()'"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active" eval="True"/>
    </record>
</odoo>